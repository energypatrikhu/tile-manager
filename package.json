{
  "name": "tile-manager",
  "version": "1.3.6",
  "private": true,
  "description": "Tile Manager is a tile joiner / multiplier / maker app made in SvelteKit & Electron",
  "main": "resources/app/electron.mjs",
  "type": "module",
  "author": "EnergyPatrikHU",
  "repository": {
    "type": "git",
    "url": "https://github.com/energypatrikhu/tile-manager.git"
  },
  "scripts": {
    "dev": "cross-env-file -p .env.dev.json concurrently --kill-others -n=svelte,electron -c='#ff3e00',blue \"vite dev\" \"bun electron.esbuild.config.mjs && electron resources/app/electron.mjs\"",
    "clear-dist": "bun rm.mjs ./dist",
    "pack:electron": "bun electron.esbuild.config.mjs",
    "pack:vite": "vite build",
    "build:electron": "bun run clear-dist && electron-builder -w --config build.config.json",
    "build:electron:release": "bun run clear-dist && electron-builder -p always -w --config build.config.json",
    "release-it:release": "release-it --config release.release-it.json",
    "build": "bun run pack:electron && bun run pack:vite && bun run build:electron",
    "release": "bun run release-it:release && bun run pack:electron && bun run pack:vite && bun run build:electron:release"
  },
  "browserslist": [
    "last 2 chrome versions"
  ],
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "electron-context-menu": "^4.0.4",
    "electron-reloader": "^1.2.3",
    "electron-serve": "^2.0.0",
    "electron-updater": "^6.3.4",
    "electron-window-state": "^5.0.3",
    "lodash": "4.17.23",
    "moment": "^2.30.1",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.4",
    "@sveltejs/adapter-static": "^3.0.4",
    "@sveltejs/kit": "^2.5.25",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.19.12",
    "@types/uuid": "^11.0.0",
    "autoprefixer": "^10.4.27",
    "concurrently": "^9.2.1",
    "cross-env-file": "^1.0.0",
    "dotenv": "^17.3.1",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "electron-connect": "^0.6.3",
    "esbuild": "^0.27.3",
    "postcss": "^8.5.6",
    "postcss-advanced-variables": "^5.0.0",
    "postcss-calc": "^10.1.1",
    "release-it": "^19.2.4",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.0",
    "svelte-preprocess": "^6.0.2",
    "tailwindcss": "^3.4.10",
    "tailwindcss-all": "^0.0.2",
    "terser": "^5.46.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.2"
  },
  "trustedDependencies": [
    "svelte-preprocess"
  ]
}
